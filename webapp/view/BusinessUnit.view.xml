									<!--	<Label text="Remarks" width="100%">-->
									<!--		<layoutData>-->
									<!--			<l:GridData span="L3 M2 S12"/>-->
									<!--		</layoutData>-->
									<!--	</Label>-->
									<!--	<TextArea id="Remarks" value="{/EditRecord>Remarks}" maxLength="254" width="100%" placeholder="Remarks"/>-->
									<!--</f:SimpleForm>-->
									<!--</content>-->
								</VBox>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>

			</Page>
